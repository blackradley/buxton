.organisation_manager
  -fields_for "organisation[organisation_manager_attributes][]", organisation_manager do |organisation_manager_form|
    = organisation_manager_form.text_field :email, :index => nil
    - if organisation_manager.new_record? then
      = link_to_function image_tag('icons/cross.gif'), "this.up( '.organisation_manager').remove()"
    - else
      = link_to_function image_tag('icons/cross.gif'), "mark_for_organisation_manager_destroy(this)"
      = organisation_manager_form.hidden_field :id, :index => nil
      = organisation_manager_form.hidden_field :should_destroy, :index => nil, :class => 'should_destroy'