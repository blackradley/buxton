%html{ 'xmlns' =>'http://www.w3.org/1999/xhtml', 'xml:lang'=> 'en' , 'lang' => 'en' }
  %head 
    %title 
      Impact Equality&trade; : 
      = "#{controller.controller_name} : #{controller.action_name}".titleize
    %meta{'http-equiv' => 'content-type', 'content'=>'text/html;charset=UTF-8'} 
    =javascript_include_tag :defaults
    -if @print_only
      = stylesheet_link_tag 'print' 
      = stylesheet_link_tag 'print', :media => 'print' 
    -else
      = stylesheet_link_tag 'default'
      = stylesheet_link_tag 'print', :media => 'print'
      -unless @current_user.nil? then
        -if @current_user.class.name == 'ActivityManager'
          = stylesheet_link_tag @current_user.activity.organisation.style
        -elsif @current_user.class.name == 'OrganisationManager' 
          = stylesheet_link_tag @current_user.organisation.style
    = javascript_include_tag "prototype"
    = javascript_include_tag "effects"
    = javascript_include_tag "dragdrop"
    = javascript_include_tag "application"	
    %link{:href=>'/images/favicon.ico', :rel=>'icon', :type=>"image/x-icon"}
  %body
    .container
      .mastHead
        .logo
      .content
        #menu
          = menu() unless @hide_menu
        = strand_menu()
        .messageArea
          %p
            =h flash[:notice]
        .workingArea
          = yield            
      .clear
      .footer
        .login_status
          = login_status() 
      .clear
