!!! transitional
%html{ 'xmlns' =>'http://www.w3.org/1999/xhtml', 'xml:lang'=> 'en' , 'lang' => 'en' }
  %head 
    %title 
      EA Toolkit : 
      = "#{controller.controller_name} : #{controller.action_name}".titleize
    %meta{'http-equiv' => 'cache-control', 'content'=>'no-store'}
    %meta{'http-equiv' => 'pragma', 'content'=>'no-cache'}
    %meta{'http-equiv' => 'content-type', 'content'=>'text/html;charset=UTF-8'}
    =raw(stylesheet_link_merged :base)
    =raw(stylesheet_link_tag 'login')
    =raw javascript_include_merged :base
    = stylesheet_link_tag 'fixes_ie6'
    =raw  "<!--[if lt IE 7]> #{}<![endif]-->"
    =raw "<!--[if lt IE 7]> #{javascript_include_tag 'jquery.pngFix.js'}<![endif]-->"
    =raw "<!--[if gte IE 7]> #{stylesheet_link_tag 'fixes_ie7'}<![endif]-->"
    = csrf_meta_tag
    %link{:href=>'/images/favicon.ico', :rel=>'icon', :type=>"image/x-icon"}
  %body
    - if @banner_text
      #banner
        = @banner_text
    .loginContainer
      = yield
      .clear
    .loginFooter
      %p
        =raw "Powered by <a href='http://www.impactequality.co.uk' target = '_blank'>Black Radley</a>."