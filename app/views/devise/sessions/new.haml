%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| 
  - unless flash.empty?
    #flashBox
      = content_tag(:div, flash[:error], :id => "flash_error") if flash[:error]
      = content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
      = content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]
  %p= f.label :email 
  %br
  %p= f.email_field :email
  %p= f.label :password
  %br
  = f.password_field :password
  
  %p= f.submit "Sign in", :class=>"submitButton"

#loginHelp
  %p
    %strong Reset password?
    =raw "If your account has been locked or you have forgotten your password, please #{link_to 'click here', '#'} and you will be sent a new password."