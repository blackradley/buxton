%table
  %tr
    %th Service Area
    %th Activity Name
    %th Ref no.
    %th Approver
    %th Date Started
    %th Actual Completion
    %th Progress
    %th 
    %th
  - @activities.each do |activity|
    %tr{:class => cycle("light", "dark")}
      %td= raw('&nbsp;')
      %td= activity.name
      %td= activity.ref_no || raw('&nbsp;')
      %td= activity.approver.email
      %td= raw('&nbsp;') #activity.started_date
      %td= raw('&nbsp;')
      %td= activity.progress
      %td= link_to "view", activity_path(activity), :class => "action edit", :target => "blank"
      %td