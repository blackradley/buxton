.approverForm
  %h2
    =@activity.name
  %fieldset.approveInputs
    %h5= "QC Officer: #{@activity.completer.email}"
    %h5= "Senior Officer: #{@activity.approver.email}"
  %fieldset.buttons
    %p Are you sure you want to delete this EA? All information related to this EA will be removed from the system and will not be retrievable.
    = check_box_tag 'accept_box'
    .cancel{ :style => 'float: right; margin-left: 4px;' }
      or
      = link_to 'Cancel', '#', :class => 'closeColorBox'
    .enabled{ :style => 'display: none; float: right;' }
      = link_to "Delete", activity_path(@activity), :method => :delete, :disable_with => "deleting.."
    .disabled{ :style => 'float: right;' }
      = "Delete"