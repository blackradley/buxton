= semantic_form_for @activity do |form|
  = form.inputs do
    / =form.input :directorate
    =form.input :name, :label => "Title"
    =form.input :start_date, :label => "Target Start Date", :as => :datepicker
    =form.input :end_date, :label => "Target End Date", :as => :datepicker
    =form.hidden_field :approver_id
    =form.hidden_field :completer_id
    =form.autocompleted_input :approver_email, :url => autocomplete_user_email_activities_path, :id_element => '#activity_approver_id', :label => "Approver"
    =form.autocompleted_input :completer_email, :url => autocomplete_user_email_activities_path, :id_element => '#activity_completer_id', :label => "Completer"
    -fp_options = @activity.hashes['function_policy']['choices']
    =form.input :function_policy, :as => :select, :collection => @activity.hashes['choices'][fp_options].collect {|option| [option , @activity.hashes['choices'][fp_options].index(option)] }, :label => "Type", :include_blank => false
    -ep_options = @activity.hashes['existing_proposed']['choices']
    =form.input :existing_proposed, :as => :select, :collection =>  @activity.hashes['choices'][ep_options].collect {|option| [option , @activity.hashes['choices'][ep_options].index(option)] }, :label => "Status", :include_blank => false
  = form.submit "Create", :class => "orangeButton"
