- if @groups
  - @groups.each do |group|
    - @approved = group.activities.find_all_by_approved("not submitted", :order => 'name', :include => :activity_manager)
    - unless @approved.empty?
      .sort_by_name{:style =>"display:block;"}
        %table.list
          %tr
            %th.left{:style => "width:300px;", :rowspan =>"2"} Name
            %th{:rowspan =>"2", :align=>"center", :style => "width:110px;"} Completed
            %th{:colspan =>"2", :nowrap => "nowrap", :style => "width:200px", :align=>"center"} Activity Manager
          %tr
            %th{:align=>"center", :style => "width:100px;"} Last Key Sent
            %th{:align=>"center", :style => "width:100px;"} Actions
          -@approved.each do |activity|
            - manager = activity.activity_manager
            %tr
              %td.left{:style => "width:300px;"}
                =h activity.name
              %td
                = progress_bar(activity.percentage_answered)
              %td{:style => "width:100px;"}
                = date_or_blank(manager.reminded_on)
              %td.actions{:nowrap => "nowrap"}
                = link_to image_tag('icons/view.gif'), {:controller => 'activities', :action => 'view', :id => activity.id}, :title =>"View"
                = link_to image_tag('icons/email.gif'), "mailto:#{h manager.email}", :title =>"Email"
                = link_to image_tag('icons/key.gif'), { :controller => 'users', :action => 'remind', :id => manager.id }, :confirm => "Send access key reminder to #{h activity.name} to #{h manager.email}?", :method => :post, :title =>"Key"
    -else 
      %p.no_info
        No Activities Started.