.searchBox
  %label Search for:
  %input{:type=>"text"}
  %input{:type=>"submit", :value=>"Search"}
.orangeButton
  =link_to "Add Activity", new_activity_path, :class=>"add"
%table{:cellspacing=>"0", :cellpadding=>"0"}
  %tr
    %th Service Area
    %th Activity Name
    %th Ref no.
    %th Approver
    %th.date Date Started
    %th.date Actual Completion
    %th Progress
    %th.last
  %tr
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up selected", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.sortControls
      =link_to "sort ascending","#", :class=>"up", :title=>"sort ascending"
      =link_to "sort descending","#", :class=>"down", :title=>"sort descending"
    %td.last.sortControls
  - @activities.each do |activity|
    %tr{:class => cycle("light", "dark")}
      %td
      %td= activity.name
      %td= activity.ref_no
      %td= activity.approver.email
      %td= #activity.started_date
      %td
      %td
      %td.last= link_to "view", view_pdf_activity_path(activity), :class => "action edit", :target => "blank"