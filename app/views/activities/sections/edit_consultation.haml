%h1#questions=h @activity.name + ", " + strand_display(@equality_strand).titlecase
%h1#questions=h "Consultation"
#questions
  = render :partial => 'question_help', :collection => question_details(:consultation, @equality_strand, [1,2,3,4,5,6,7])
  =form_for(@activity, :url => activities_section_path(@activity)) do |f|
    = render :partial => 'intro'
    = render :partial => 'question', :collection => question_details(:consultation, @equality_strand, [1,2,3,4,5,6]), :locals => {:f => f}
    = render :partial => 'question_issues', :collection => question_details(:consultation, @equality_strand, [7]), :locals => {:f => f}    
    = hidden_field_tag 'id', @id 
    = hidden_field_tag 'equality_strand', @equality_strand
    %p.question.saveField
      %span.button
        = submit_tag 'Save', :id => 'section_save_button', :class => "consultation_save"
  .clear

.consultationColorbox{ :style => "overflow: hidden;" }
  .commentform{ :style => "overflow: hidden;" }
    %h2 Warning
    %p
      The EA cannot be completed until you have performed at least one consultation. Please review your answers, as this section will not be complete until a consultation has been performed.
    %p{:style => "text-align: center; padding: 10px;"}
      %span.button
        %input{:name => "backButton", :class => "submitButton closeColorBox", :type => "submit", :value => "Go back"}
      or
      = link_to "continue", "#", :class => "activityFormSubmitLink"
