      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %td.last.sortControls
  - @activities.each do |activity|
    %tr{:class => cycle("light", "dark")}
      %td= activity.service_area.name
      %td= activity.name
      %td= activity.ref_no
      %td= activity.approver.email
      %td= activity.started ? activity.actual_start_date.to_s(:short) : "N/A"
      %td= activity.approved ? activity.approved_on.to_s(:short) : "N/A"
      %td= activity.progress
      %td.last
        = link_to "edit", questions_activity_path(activity), :class => "action edit"
        = link_to "view", activity_path(activity), :class => "action view"

