%h2 My EINAs
%table#sortable{:cellspacing=>"0", :cellpadding=>"0"}
  %thead
    %tr
      %th Service Area
      %th Activity Name
      %th Ref no.
      %th Approver
      %th.date Date Started
      %th.date Actual Completion
      %th Progress
      %th.last
  %tr
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"down", :title=>"sort descending"
    %th.sortControls
      =link_to raw("&nbsp;&nbsp;"),"#", :class=>"up", :title=>"sort ascending"
