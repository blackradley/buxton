#show
  %table
    %tr
      %th.h4{:colspan=>"2"} Action Planning by equality group

  -issues = @activity.issues.group_by(&:strand)
  -issues.each do |key, issue_array|
    -issue_array.each do |issue|
      -issue.attributes.each do |attribute|
        -issues[key][(issues[key].index(issue))][attribute]; issues[key][(issues[key].index(issue))][attribute] = "Not answered yet" unless (attribute.to_s == "")

  -if @activity.relevant_strands.include? 'gender' then
    %table
      %tr
        %th{:colspan=>"2"}Men and Women
      -if strand_issues = issues["gender"]
        -strand_issues.each do |i|
          %tr
            %td.label Description:
            %td.labelled
              =h i.description
          %tr
            %td.label Actions:
            %td.labelled
              =h i.actions
          %tr
            %td.label Timescales:
            %td.labelled
              =h i.timescales
          %tr
            %td.label Resources:
            %td.labelled
              =h i.resources
          %tr
            %td.label Lead officer:
            %td.labelled
              =h i.lead_officer
        %tr
          %td.label No issues.
          %td.labelled

