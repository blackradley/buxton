%h1#questions
  =h @activity.name 
  <br />
  = link_to image_tag('icons/previous.gif', :class =>'previous'), { :action => 'edit', :id => 'impact', :equality_strand => @equality_strand }, :title =>"Previous Section"
  = @equality_strand.titleize + " - "
  Consultation
  = link_to image_tag('icons/next.gif', :class =>'next'), { :action => 'edit', :id => 'additional_work', :equality_strand => @equality_strand }, :title =>"Next Section"  
#questions
  -form_for(:activity, :url => {:action => 'update'}) do |f|
    = render :partial => 'question_help', :collection => question_details(:consultation, @equality_strand, [1,2,3,4,5,6,7]), :locals => {:f => f}
    = render :partial => 'question', :collection => question_details(:consultation, @equality_strand, [1,2,3,4,5,6]), :locals => {:f => f}
    = render :partial => 'question_issues', :collection => question_details(:consultation, @equality_strand, [7]), :locals => {:f => f}    
    = hidden_field_tag 'id', @id 
    = hidden_field_tag 'equality_strand', @equality_strand
    %p.question
      %span.button
        = submit_tag 'Save', :disable_with => 'Saving...'
  .clear
