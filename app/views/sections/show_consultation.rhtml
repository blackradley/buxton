<% @section = 'consultation' %>

<div id="show">
	
  <table>
  <tr><th colspan="2" class="h4">Consultation by equality group</th></tr>
  </table>

<% if @activity.relevant_strands.include? 'gender' then -%>
<table>
<tr><th colspan="2">Men and Women</th></tr>
<%= answer(@activity, :consultation, :gender, 1) %>
<%= answer(@activity, :consultation, :gender, 2) %>
<%= answer(@activity, :consultation, :gender, 3) %>
<%= answer(@activity, :consultation, :gender, 4) %>
<%= answer(@activity, :consultation, :gender, 5) %>
<%= answer(@activity, :consultation, :gender, 6) %>
<%= answer(@activity, :consultation, :gender, 7) %>
<% issues = @activity.issues_by(@section, 'gender') -%>
<% if issues.size > 0 then -%>
<tr><td class="label">Please record the issues identified</td><td class="labelled">
  <ul>
  	<% issues.each do |issue| -%>
  	<li><%=h issue.description -%></li>
  	<% end -%>
  </ul>
  </td></tr>
<% end -%>
</table>
<% end -%>

